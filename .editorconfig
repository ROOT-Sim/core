root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.[ch]]
indent_style = tab
indent_size = 8

[*.cpp]
indent_style = tab
indent_size = 8

[Makefile]
indent_style = tab
indent_size = 8

[meson.build]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4
